{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [".env"],
  "tasks": {
    "build": {
      "dependsOn": ["codegen", "^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "codegen": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "db:generate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
